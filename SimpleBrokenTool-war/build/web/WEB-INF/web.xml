<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>CustomerDetails</servlet-name>
        <servlet-class>trader.web.CustomerDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>trader.web.CustomerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PortfolioController</servlet-name>
        <servlet-class>trader.web.PortfolioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerDetails</servlet-name>
        <url-pattern>/CustomerDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/CustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PortfolioController</servlet-name>
        <url-pattern>/PortfolioController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>CustomerDetails</welcome-file>
    </welcome-file-list>
</web-app>
